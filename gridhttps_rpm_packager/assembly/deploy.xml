<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/assembly-1.0.0.xsd">

	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>${basedir}/../gridhttps_common/target</directory>
			<outputDirectory>${jar_installation_prefix}/${parent.artifactId}</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../gridhttps_filter/target</directory>
			<outputDirectory>${jar_installation_prefix}/${parent.artifactId}</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../gridhttps_webapp/target</directory>
			<outputDirectory>${jar_installation_prefix}/${parent.artifactId}</outputDirectory>
			<includes>
				<include>*.war</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../etc</directory>
			<outputDirectory>${conf_installation_prefix}/${module_name}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../log</directory>
			<outputDirectory>${log_installation_directory}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../doc</directory>
			<outputDirectory>${doc_installation_prefix}/${parent.artifactId}-${version}</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/../</directory>
			<outputDirectory>${doc_installation_prefix}/${parent.artifactId}-${version}</outputDirectory>
			<includes>
				<include>LICENSE.txt</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<outputDirectory>${jar_installation_prefix}/${parent.artifactId}</outputDirectory>
			<excludes>
				<exclude>${groupId}:gridhttps_common</exclude>
				<exclude>${groupId}:gridhttps_filter</exclude>
				<exclude>${groupId}:gridhttps_webapp</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
